<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:id="@+id/top"
        android:background="#FE6D12" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="数据透视区域"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="11dp"
            android:src="@drawable/back_icon" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <Button android:id="@+id/tofrom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="表格"
            android:textSize="14sp"/>
        <Button android:id="@+id/totu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="图表"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_above="@id/bottom"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="11dp" >

            <TextView
                android:id="@+id/ConditionFragment_Weidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:textSize="12sp"
                android:text=" 条  件  查  询     :"  />

            <Button
                android:id="@+id/ConditionFragment_Weidu_actv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="添加" />

            <ListView
                android:id="@+id/ConditionFragment_Weidu_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/ConditionFragment_Weidu_actv"
                android:layout_toRightOf="@id/ConditionFragment_Weidu"
                android:background="@color/wheat" >
            </ListView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#082C30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="11dp" >

            <TextView
                android:id="@+id/ConditionFragment_Weidu_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:textSize="12sp"
                android:text="行标签（横轴）:" />

            <Button
                android:id="@+id/ConditionFragment_Weidu_hang_actv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="添加" />

            <ListView
                android:id="@+id/ConditionFragment_Weidu_hang_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/ConditionFragment_Weidu_hang_actv"
                android:layout_toRightOf="@id/ConditionFragment_Weidu_hang"
                android:background="@color/wheat" >
            </ListView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#082C30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="11dp" >

            <TextView
                android:id="@+id/ConditionFragment_Weidu_lie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:textSize="12sp"
                android:text="列标签（图例）:" />

            <Button
                android:id="@+id/ConditionFragment_Weidu_lie_actv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="添加" />

            <ListView
                android:id="@+id/ConditionFragment_Weidu_lie_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/ConditionFragment_Weidu_lie_actv"
                android:layout_toRightOf="@id/ConditionFragment_Weidu_lie"
                android:background="@color/wheat" >
            </ListView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#082C30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="11dp" >

            <TextView
                android:id="@+id/ConditionFragment_Zhibiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginRight="11dp"
                android:text="指    标（纵轴）:" />

            <Button
                android:id="@+id/ConditionFragment_Zhibiao_actv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="添加" />

            <ListView
                android:id="@+id/ConditionFragment_Weidu_zhibiao_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/ConditionFragment_Zhibiao_actv"
                android:layout_toRightOf="@id/ConditionFragment_Zhibiao"
                android:background="@color/wheat" >
            </ListView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>